<html>
  <head>
    <meta charset="UTF-8">
    <title>{{handle}}</title>

    <style>
      @font-face {
        font-family: "Space Grotesk";
        src: url({{fonts}}) format("woff2");
        font-weight: 300 800;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }


      html {
        min-width: fit-content;
        min-height: fit-content;
      }

      body {
        font-family: "Space Grotesk", sans-serif;
        font-feature-settings: "tnum" on, "lnum" on, "ss02" on, "ss03" on, "ss04" on;
      }

      main {
        height: 670px;
        width: 1200px;
        padding: 80px 60px;
        background-image: url({{background}});
        background-repeat: no-repeat, repeat;
        background-color: #0D0F19;
        background-size: cover;
        color: white;
      }

      header {
        display: flex;
        align-items: center;
        gap: 24px;
        margin-top: 50px;
        margin-bottom: 180px;
      }

      header img {
        padding: 6px;
        border: 3px solid #4250e4;
        border-radius: 50%;
        height: 180px;
      }

      header h1, h3 {
        margin: 0;
      }

      header h1 {
        font-size: 46px;
      }

      header h3 {
        font-size: 30px;
        color: rgba(255, 255, 255, 0.8);
      }

      header .details {
        display: flex;
        flex-direction: column;
        gap: 12px
      }

      .details p {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.8);

        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        word-wrap: break-word;
        -webkit-box-orient: vertical;
      }

      footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      footer img {
        height: 80px;
      }

      .statistics-container {
        display: flex;
        align-items: center;
        gap: 40px;
      }

      .statistics {
        display: flex;
        flex-direction: column;
      }

      .statistics .value {
        font-weight: 800;
        font-size: 38px;
      }

      .statistics .label {
        font-weight: 300;
        font-size: 30px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.4);
      }
    </style>
  </head>

  <body>
    <main>
      <header>
        {{#if avatar}}
          <img src="{{avatar}}" alt="{{handle}}">
        {{/if}}

        <div class="details">
          {{#if handle}}
            <h1>{{handle}}</h1>
            <h3>{{address}}</h3>
          {{else}}
            <h1>{{address}}</h1>
          {{/if}}
          <p>{{bio}}</p>
        </div>
      </header>

      <footer>
        <div class="statistics-container">
          <div class="statistics">
            <span class="value">{{tasksWon}}</span>
            <span class="label">Tasks Won</span>
          </div>

          <div class="statistics">
            <span class="value">{{tasksOpened}}</span>
            <span class="label">Tasks Opened</span>
          </div>

          <div class="statistics">
            <span class="value">{{acceptedProposals}}</span>
            <span class="label">Accepted Proposals</span>
          </div>
        </div>

        <img src="{{logo}}" />
      </footer>
    </main>
  </body>
</html>